var textnode = document.createTextNode("<%= @free_text_answer.text %>");
document.getElementById("answers").appendChild(textnode);

var result = "<%= escape_javascript(render partial: "games/free_text_question", locals: { question: @next_question, free_text_answer: FreeTextAnswer.new }) %>";
document.getElementById("question").innerHTML = result;

// this is the window manager with one of the default options changed
var wm = new WM({ backgroundColorWindow: 'green' });

// enable window snapping to screen edges and other windows when moving
wm.snap()

// create a window
var wind = wm.createWindow({ width: 600, height: 800, title: 'Work' });

// set content of window
wind.content.style.margin = '10px';
wind.content.innerHTML = "<%= escape_javascript(render partial: 'games/instant_wild') %>"

// open the window

wind.open();

